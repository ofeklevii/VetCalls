<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/editProfilePic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/user_person_profile_avatar_icon_190943"
                android:contentDescription="Edit Profile Picture"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                android:background="@drawable/circle_shape"
                android:clipToOutline="true" />

            <Button
                android:id="@+id/changeProfilePicButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Change Picture"
                android:textColor="#FFFFFF"
                android:backgroundTint="#29B6F6"
                android:layout_marginBottom="16dp" />

            <!-- Name -->
            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp" />

            <!-- Birthday -->
            <EditText
                android:id="@+id/editBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:hint="Birthday (YYYY-MM-DD)"
                android:inputType="date"
                android:layout_marginBottom="16dp" />

            <!-- Weight -->
            <EditText
                android:id="@+id/editWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight (kg)"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:inputType="numberDecimal"
                android:layout_marginBottom="16dp" />


            <!-- Race -->
            <EditText
                android:id="@+id/editRace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Race"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:inputType="text"
                android:layout_marginBottom="16dp" />

            <!-- Allergies -->
            <EditText
                android:id="@+id/editAllergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Allergies"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:inputType="text"
                android:layout_marginBottom="16dp" />

            <!-- Vaccines -->
            <EditText
                android:id="@+id/editVaccines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vaccines and drugs"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:inputType="text"
                android:layout_marginBottom="16dp" />

            <!-- Veterinarian Selection Section -->
            <TextView
                android:id="@+id/vetSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="בחירת וטרינר"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/currentVetText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="הווטרינר הנוכחי: אין"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/selectVetButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="בחר וטרינר"
                android:textColor="#FFFFFF"
                android:backgroundTint="#29B6F6"
                android:layout_marginBottom="16dp" />

            <!-- Optional: Display when next change is available -->
            <TextView
                android:id="@+id/nextVetChangeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="תוכל לשנות את הווטרינר שלך שוב בתאריך: לא נקבע"
                android:textStyle="italic"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <!-- Buttons in horizontal row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Cancel Button -->
                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#757575"
                    android:elevation="4dp"
                    android:layout_marginEnd="8dp" />

                <!-- Save Button -->
                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save Changes"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#29B6F6"
                    android:elevation="4dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>